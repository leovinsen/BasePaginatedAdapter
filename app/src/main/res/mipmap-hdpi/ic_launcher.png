<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/_10dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/MufitToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@string/order_detail_appbar_title"
                app:titleTextAppearance="@style/ToolbarTitleAppearance" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                tools:mContext=".MapsActivity" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/order_profile_pic"
                android:layout_width="@dimen/order_detail_profile_pic_size"
                android:layout_height="@dimen/order_detail_profile_pic_size"
                android:elevation="7dp"
                android:src="@drawable/trainer_icon"
                app:layout_constraintBottom_toBottomOf="@id/map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map"
                tools:targetApi="lollipop" />

            <ImageButton
                android:id="@+id/order_btn_open_maps"
                android:layout_width="@dimen/order_details_maps_navigation_icon_size"
                android:layout_height="@dimen/order_details_maps_navigation_icon_size"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                an