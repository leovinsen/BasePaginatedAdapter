<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MufitToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/order_detail_appbar_title"
        app:titleTextAppearance="@style/ToolbarTitleAppearance" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/_10dp">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                tools:mContext=".MapsActivity" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/order_profile_pic"
                android:layout_width="@dimen/order_detail_profile_pic_size"
                android:layout_height="@dimen/order_detail_profile_pic_size"
                android:elevation="7dp"
                android:src="@drawable/trainer_icon"
                app:layout_constraintBottom_toBottomOf="@id/map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map"
                tools:targetApi="lollipop" />

            <ImageButton
                android:id="@+id/order_btn_open_maps"
                android:layout_width="@dimen/order_details_maps_navigation_icon_size"
                android:layout_height="@dimen/order_details_maps_navigation_icon_size"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:contentDescription="@string/order_detail_btn_maps_desc"
                android:cropToPadding="false"
                android:onClick="openGoogleMap"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_maps_navigation"
                app:layout_constraintBottom_toBottomOf="@id/map"
                app:layout_constraintEnd_toEndOf="@id/map" />

            <TextView
                android:id="@+id/order_client_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/trueno_semi_bold"
                android:gravity="center"
                android:text="@string/order_detail_customer_name_placeholder"
                android:textAlignment="center"
                android:textColor="@color/order_detail_name_color"
                android:textSize="@dimen/order_detail_name_ts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_profile_pic" />

            <TextView
                android:id="@+id/order_text_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trueno_regular"
                android:text="@string/order_detail_class_placeholder"
                android:textAlignment="viewEnd"
                android:textColor="@color/order_detail_speciality_orange"
                android:textSize="@dimen/order_detail_name_ts"
                app:layout_constraintEnd_toStartOf="@+id/order_price"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_client_name" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/trueno_semi_bold"
                android:text="@string/order_detail_price_placeholder"
                android:textColor="@color/order_detail_speciality_orange"
                android:textSize="@dimen/order_detail_name_ts"
                app:layout_constraintBaseline_toBaselineOf="@id/order_text_speciality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/order_text_speciality"
                app:layout_constraintTop_toBottomOf="@+id/order_client_name" />

            <ImageButton
                android:id="@+id/order_button_call"
                android:layout_width="@dimen/call_message_button_size"
                android:layout_height="@dimen/call_message_button_size"
                android:layout_marginTop="@dimen/_11dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_round_image_button"
                android:contentDescription="@string/order_button_call_content_desc"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_call"
                app:layout_constraintEnd_toStartOf="@+id/vertical_half"
                app:layout_constraintTop_toBottomOf="@+id/order_text_speciality" />

            <ImageButton
                android:id="@+id/order_button_message"
                android:layout_width="@dimen/call_message_button_size"
                android:layout_height="@dimen/call_message_button_size"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_round_image_button"
                android:contentDescription="@string/order_detail_btn_message_content_desc"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_message"
                app:layout_constraintBottom_toBottomOf="@id/order_button_call"
                app:layout_constraintStart_toStartOf="@+id/vertical_half"
                app:layout_constraintTop_toTopOf="@id/order_button_call" />

            <View
                android:id="@+id/divider_time"
                style="@style/divider_order_detail"
                android:layout_marginTop="@dimen/_11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/order_button_call" />

            <TextView
                android:id="@+id/order_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/order_address_ml"
                android:layout_marginTop="@dimen/_9dp"
                android:fontFamily="@font/trueno_regular"
                android:text="@string/order_detail_date_title"
                android:textColor="@color/order_title_grey"
                android:textSize="@dimen/order_address_ts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_time" />

            <TextView
         